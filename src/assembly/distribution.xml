<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>

	<files>
		<file>
			<source>target/stampo.jar</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/assembly/stampo</source>
			<outputDirectory>/bin/</outputDirectory>
			<fileMode>0775</fileMode>
			<lineEnding>unix</lineEnding>
		</file>
		<file>
			<source>src/assembly/stampo.bat</source>
			<outputDirectory>/bin/</outputDirectory>
			<fileMode>0775</fileMode>
			<lineEnding>dos</lineEnding>
		</file>
		<file>
			<source>src/assembly/README.txt</source>
			<destName>README.txt</destName>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>LICENSE</source>
			<destName>LICENSE.txt</destName>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>target/generated-sources/license/THIRD-PARTY.txt</source>
			<destName>NOTICE.txt</destName>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>